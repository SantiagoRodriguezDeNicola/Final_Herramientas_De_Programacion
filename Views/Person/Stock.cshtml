@model Final.ViewModels.PersonDetailViewModel;

@{
    ViewData["Title"] = "Stock";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<h1>@Html.DisplayFor(model => model.LastName)</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Birthdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Birthdate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Weist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Weist)
        </dd>
    </dl>
</div>

<h1>Stock Prendas</h1>

<div>   
    <a class="btn btn-primary" asp-controller="Stock" asp-action="Create" asp-route-id="@Model.Id">
        <i class="bi bi-plus"></i>
        Agregar stock
    </a>
</div>


<div class="row mt-4">
    @foreach (var item in Model.Stocks)
    {
        <div class="col-12">
            <div class="card text-white bg-dark mb-3">
                <div class="row no-gutters">
                    <div class="col-md-10">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">@item.Clothe.Name (@item.Clothe.Price)</h5>
                                    <p class="card-text text-justify">@(item.Clothe.Description.Length > 500 ? $"{item.Clothe.Description.Substring(0, 500)}..." : item.Clothe.Description)</p>
                                </div>
                                <div>
                                    <div>
                                        <h5>$@item.Clothe.Price</h5>
                                    </div>
                                    <div>
                                        <h5>Stock:@item.Quantity</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mt-3">
                                <p class="card-text mb-0 mt-2">
                                    <i class="bi bi-music-note-beamed"></i>
                                    <small class="text-muted">@item.Clothe.Weist</small>
                                </p>
                                <div>
                                    <a class="btn btn-primary"asp-controller="Stock" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i>
                                        Editar
                                    </a>
                                    <a class="btn btn-danger"asp-controller="Stock" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i>
                                        Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-2">
    <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
</div>

