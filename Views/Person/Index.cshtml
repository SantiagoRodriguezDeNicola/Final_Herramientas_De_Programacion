@using Final.ViewModels;

@model PersonViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">
    <i class="bi bi-mic-fill"></i>
    Personas
</h1>

<div>
    <a class="btn btn-primary" asp-action="Create" role="button">
        <i class="bi bi-plus"></i>
        Agregar Persona
    </a>
</div>

<br>

<form method="get" asp-action="Index">
    <div class="col-2 form-group">
        <input class="form-control" asp-for="NameFilter"/> 
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i>
            Buscar
        </button>          
    </div>
</form>

<div class="row mt-4">
    @foreach (var person in Model.Persons)
    {
        <div class="col-9">
            <div class="card text-white bg-dark mb-3">
                <div class="row no-gutters">
                    <div class="col-md-10">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">@person.Name</h5>
                                    <h5 class="card-title">@person.LastName</h5>
                                    <p class="card-text text-justify">
                                        <i class="bi bi-calendar-week-fill"></i>
                                        AÃ±o de nacimiento: @person.Birthdate
                                    </p>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <p class="card-text mb-0 mt-2">
                                    <i class="bi bi-music-note-beamed"></i>
                                    Talle: @person.Weist
                                </p>
                                <div>
                                    <a class="btn btn-success" asp-action="Stock" asp-route-id="@person.Id">
                                        <i class="bi bi-bag-plus-fill"></i>
                                        Stock
                                    </a>
                                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@person.Id">
                                        <i class="bi bi-camera-reels"></i>
                                        Detalles
                                    </a>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@person.Id">
                                        <i class="bi bi-pencil"></i>
                                        Editar
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@person.Id">
                                        <i class="bi bi-trash"></i>
                                        Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>