@using Final.ViewModels;
@model Final.ViewModels.UserSearchViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">
    <i class="bi bi-person-fill"></i>
    Usuarios
</h1>

<form method="get" asp-action="Index">
    <div class="col-2 form-group">
        <input class="form-control" asp-for="UsernameFilter" placeholder="Nombre"/> 
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i>
            Buscar
        </button>          
    </div>
</form>

@if(Model.Mensaje is not null) {
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}

<form method="post">
    <div class="row mt-4">
        @foreach (var item in Model.Users)
        {
            <div class="col-8">
                <div class="card text-white bg-dark mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-10">
                            <div class="card-body d-flex flex-column justify-content-between h-100">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5 class="card-title">@item.UserName</h5>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a class="btn btn-primary" asp-action="AssignRole" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil"></i>
                                            Asignar Rol
                                        </a>
                                        <a class="btn btn-danger" asp-action="RemoveRole" asp-route-id="@item.Id">
                                            <i class="bi bi-x-circle"></i>
                                            Remover Rol
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
