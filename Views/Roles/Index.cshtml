@model Final.ViewModels.RolesSearchViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">
    <i class="bi bi-people-fill"></i>
    Roles
</h1>

<div>
    <a class="btn btn-primary" asp-action="Create" role="button">
        <i class="bi bi-plus"></i>
        Agregar rol
    </a>
</div>

<br>

<form method="get" asp-action="Index">
    <div class="col-2 form-group">
        <input class="form-control" asp-for="nameFilter" placeholder="Nombre"/> 
        <button class="btn btn-primary" type="submit">
            <i class="bi bi-search"></i>
            Buscar
        </button>          
    </div>
</form>

<div class="row mt-4">
    @foreach (var item in Model.Roles)
    {
        <div class="col-8">
            <div class="card text-white bg-dark mb-3">
                <div class="row no-gutters">
                    <div class="col-md-10">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">@item.Name</h5>
                                </div>
                                <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                    Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
