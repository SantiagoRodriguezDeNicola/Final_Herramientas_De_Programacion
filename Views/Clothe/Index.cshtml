@using Final.ViewModels;

@model ClotheViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">
    <i class="bi bi-vinyl-fill"></i>
    Prendas
</h1>

<div>
    <a class="btn btn-primary" asp-action="Create" role="button">
        <i class="bi bi-plus"></i>
        Agregar Prenda
    </a>
</div>

<div class="mt-4">
    <form method="get" asp-action="Index">
        <div class="col-2 form-group">
            <input class="form-control" asp-for="NameFilter"/> 
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i>
                Buscar
            </button>          
        </div>
    </form>
</div>


<div class="row mt-4">
    @foreach (var clothe in Model.Clothes)
    {
        <div class="col-12">
            <div class="card text-white bg-dark mb-3">
                <div class="row no-gutters">
                    <div class="col-md-10">
                        <div class="card-body d-flex flex-column justify-content-between h-100">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h5 class="card-title">@clothe.Name (@clothe.Name)</h5>
                                    <p class="card-text text-justify">@(clothe.Description.Length > 500 ? $"{clothe.Description.Substring(0, 500)}..." : clothe.Description)</p>
                                </div>
                                <div>
                                    <h5>$@clothe.Price</h5>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mt-3">
                                <p class="card-text mb-0 mt-2">
                                    <i class="bi bi-music-note-beamed"></i>
                                    <small class="text-muted">@clothe.Weist</small>
                                </p>
                                <div>
                                    <a asp-action="Details" asp-route-id="@clothe.Id" class="btn btn-secondary">
                                        <i class="bi bi-camera-reels"></i>
                                        Detalles
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@clothe.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil"></i>
                                        Editar
                                    </a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@clothe.Id">
                                        <i class="bi bi-trash"></i>
                                        Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

